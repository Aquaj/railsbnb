<%= simple_form_for :search,  url: flats_path, method: :get do |f| %>
    <%= f.input :address, placeholder: "where would you like to stay?",input_html:{value: @address} %>
    <%= f.input :distance, as: :integer, min: 0, placeholder: "10km", input_html:{value: @distance} %>
    <%= f.submit "Search" %>
<% end %>
