<div class="flat-info">
  <% if @flat.photo.present? %>
    <div class="top-banner" style="background-image: url(<%= @flat.photo.path %>)"></div>
  <% else %>
    <div class="top-banner" style="background-image: url('http://placehold.it/1500')"></div>
  <% end %>
  <div class="flat-content">
    <div class="flat-details">
      <div class="greetings">
        <div class="owner-pic">
          <% if @flat.user.picture %>
            <%= cl_image_tag @flat.user.picture.path, size: "100x100" %>
          <% else %>
            <%= image_tag 'http://placehold.it/100', class: "avatar avatar-very-large" %>
          <% end %>
        </div>
        <span class="name"><%= @flat.user.name %></span> welcomes you to the: <br>
        <span class="address"> <%= @flat.address %></span>
      </div>
      <div class="flat-characteristics">
        <div class="price"><%= @flat.price %>â‚¬/night</div>
        <div class="capacity">Available for <%= @flat.capacity %> persons</div>
        <div class="bathroom"><%= @flat.bathroom %> bathrooms</div>
        <div class="bedroom"><%= @flat.bedroom %> bedrooms</div>
        <div class="departure_time">Exit at <%= @flat.departure_time %></div>
        <div class="tv_wifi"><%= @flat.tv_wifi %></div>
        <div class="washing_machine"><%= @flat.washing_machine%></div>
        <div class="swimming_pool"><%= @flat.swimming_pool%></div>
        <div class="wheelchair"><%= @flat.wheelchair%></div>
      </div>
    </div>
    <div class="map-container"><div id="map"></div></div>
  </div>
</div>

<% content_for(:js) do %>
  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
  <script>
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'map'} }, displayOnMap);
  handler.getMap().setZoom(14);

  function displayOnMap(position){
    var marker = handler.addMarker({
      lat: <%= @flat.latitude %>,
      lng: <%= @flat.longitude %>,
    });
    handler.map.centerOn(marker);
  };
  </script>
<% end %>
